<FilesMatch "\.(php|php3|php4|php5|php6|php7|php8|phps)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</FilesMatch>

# Garante que PHP volte a ser executado nesta pasta
<IfModule mod_php.c>
    php_flag engine on
</IfModule>

<IfModule proxy_fcgi_module>
    <FilesMatch "\.php$">
        SetHandler "proxy:unix:/var/run/php/php8.1-fpm.sock|fcgi://localhost/"
    </FilesMatch>
</IfModule>
